<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:chartview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background_temp">
    
    <LinearLayout 
        android:id="@+id/linearlayout_homeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".HomeFragment" >

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <!-- Start Heart Rate card -->
             <LinearLayout
                android:id="@+id/TitleInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:orientation="vertical"
                android:gravity="center" >
             
                
                  <TextView
                    android:id="@+id/TitleSavingHearts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"     
                    android:layout_gravity="left"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/googleNowGray" 	
                    android:text="@string/title_saving_hearts" />
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:src="@drawable/target" />
                    
                    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:gravity="right" >
                  
                  <TextView
                 	android:id="@+id/TargetMaxHR"
         			android:layout_width="match_parent"
           			android:layout_height="wrap_content"
              		android:ems="10"
              		android:textSize="17sp"
           			android:gravity="left"
     				android:textAppearance="?android:attr/textAppearanceSmall"
           			android:textColor="@color/googleNowGray" />
                  
                  <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                  
                  <TextView
                 	android:id="@+id/TargetMaxMets"
         			android:layout_width="match_parent"
           			android:layout_height="wrap_content"
           			android:textSize="17sp"
              		android:ems="10"
           			android:gravity="left"
     				android:textAppearance="?android:attr/textAppearanceSmall"
           			android:textColor="@color/googleNowGray" />
                  
                  <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
             </LinearLayout>
     
                 </LinearLayout>
              </LinearLayout>
              
              <LinearLayout
                android:id="@+id/randomlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"            
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

			</LinearLayout>

            <LinearLayout
                android:id="@+id/target_hr_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:orientation="horizontal" >

				<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/targertHeartRatesTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/target_hr"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/googleNowGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
<!--  
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginRight="5dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/about_fragment_image_description"
                            android:fitsSystemWindows="false"
                            android:src="@drawable/target" />
                            -->
<!--  
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >
                            -->

                            <TextView
                                android:id="@+id/BPM1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:gravity="left"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/googleNowGray" />
                            
                             <TextView
                                android:id="@+id/textview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                               />

                            <TextView
                                android:id="@+id/BPM2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:gravity="left"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/googleNowGray" />
                            
                            <TextView
                                android:id="@+id/textview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                               />

                            <TextView
                                android:id="@+id/BPM3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:gravity="left"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/googleNowGray" />
                            
                            <TextView
                                android:id="@+id/textview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                               />
                             
                             <TextView
                                 android:id="@+id/BPM4"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:ems="10"
                                 android:gravity="left"
                                 android:textAppearance="?android:attr/textAppearanceSmall"
                                 android:textColor="@color/googleNowGray" />
                             
                             <TextView
                                android:id="@+id/textview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                               />
                             
                        <!--  </LinearLayout> -->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/targerHRCardDropshadow"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_below="@id/target_hr_card"
                android:background="@drawable/dropshadow" />

            <!-- End Heart Rate card -->
            
            <LinearLayout
                android:id="@+id/randomlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

			</LinearLayout>
			<!-- 85% MET Fact -->
			 <LinearLayout
                android:id="@+id/met_fact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:orientation="vertical" >
                 <TextView
                        android:id="@+id/METTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:text="MET Levels"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/googleNowGray" />
                 <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    
                       <TextView
                 	android:id="@+id/MET85"
         			android:layout_width="match_parent"
           			android:layout_height="wrap_content"
              		android:ems="10"
              		android:textSize="17sp"
           			android:gravity="center"
     				android:textAppearance="?android:attr/textAppearanceSmall"
           			android:textColor="@color/googleNowGray" />
                        <TextView
                 	android:id="@+id/MET85Explain"
         			android:layout_width="match_parent"
           			android:layout_height="wrap_content"
              		android:ems="10"
              		android:textSize="14sp"
              		android:text="Healthy MET Level (85%)"
           			android:gravity="center"
     				android:textAppearance="?android:attr/textAppearanceSmall"
           			android:textColor="@color/googleNowGray" />
                        <TextView
                 	android:id="@+id/MET100"
         			android:layout_width="match_parent"
           			android:layout_height="wrap_content"
           			android:layout_marginTop="10dp"
              		android:ems="10"
              		android:textSize="17sp"
           			android:gravity="center"
     				android:textAppearance="?android:attr/textAppearanceSmall"
           			android:textColor="@color/googleNowGray" />
                        <TextView
                 	android:id="@+id/MET100Explain"
         			android:layout_width="match_parent"
           			android:layout_height="wrap_content"
           			
              		android:ems="10"
              		android:textSize="14sp"
              		android:text="Max MET Level (100%)"
           			android:gravity="center"
     				android:textAppearance="?android:attr/textAppearanceSmall"
           			android:textColor="@color/googleNowGray" />
                <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                               />
                    </LinearLayout>
                
			     </LinearLayout>
			     
			  <View
                android:id="@+id/METFactDropshadow"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="@drawable/dropshadow" />
			
			<!-- End 85% MET Fact -->
			
			 <LinearLayout
                android:id="@+id/randomlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

			</LinearLayout>

            <!-- Start Random Facts Card -->
	
            <LinearLayout
                android:id="@+id/random_facts_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/randomFactsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:text="@string/random_facts_title"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/googleNowGray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/randomFact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:gravity="left"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/googleNowGray" />
                        <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                               />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/factsCardDropshadow"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="@drawable/dropshadow" />
        <!-- End Random Facts Card -->

        </LinearLayout>

            <!-- Start Button -->

        <Button
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/connect_button"
            android:gravity="center"
            android:onClick="startButton"
            android:text="@string/start_workout" />
		
			<!-- End Start Button -->
			
    </LinearLayout>

</ScrollView>