<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_temp"
    android:orientation="vertical" >
    
    <RelativeLayout
         android:id="@+id/results_layout"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_marginLeft="20dp"
	     android:layout_marginRight="20dp"
	     android:layout_marginTop="20dp"
	     android:background="@drawable/back">
	     
    	 <!-- time results -->
        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:textStyle="bold"
             android:textSize="20dp"
             android:text="Time:" />
        <TextView
             android:id="@+id/results_timer"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerHorizontal="true"
             android:textStyle="bold"
             android:textSize="20dp"
             android:text="0.00" />
        
        <!-- Heart Rate -->
        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_marginTop="50dp"
             android:textStyle="bold"
             android:textSize="20dp"
             android:text="Maximum Heart Rate:" />
        <TextView
             android:id="@+id/results_heartrate"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_marginTop="50dp"
             android:layout_centerHorizontal="true"
             android:textStyle="bold"
             android:textSize="20dp"
             android:text="0.00" />
        
        <!-- Calories -->
	    <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_marginTop="95dp"
             android:textStyle="bold"
             android:textSize="20dp"
             android:text="Calories:" />
        <TextView
             android:id="@+id/results_calories"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_marginTop="95dp"
             android:layout_centerHorizontal="true"
             android:textStyle="bold"
             android:textSize="20dp"
             android:text="0.00" /> 
             
        <!-- Average Heart Rate -->
        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_marginTop="140dp"
             android:textStyle="bold"
             android:textSize="20dp"
             android:text="Average Heart Rate:" />
        <TextView
             android:id="@+id/results_aveheartrate"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_marginTop="140dp"
             android:layout_centerHorizontal="true"
             android:textStyle="bold"
             android:textSize="20dp"
             android:text="0.00" />
	 </RelativeLayout>
    
</LinearLayout>
