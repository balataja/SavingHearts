<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_temp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#a93434"
        android:gravity="center"
        android:text="Workout Summary"
        android:textColor="#fcfafa"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/results_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Duration:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="50dp"
            android:text="Max HR:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/results_maxHR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="0.00"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="140dp"
            android:text="METs:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/results_mets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:text="0.00"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/results_aveHR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp"
            android:text="0.00"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/results_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:text="0.00"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/results_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentRight="true"
            android:text="0.00"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="18dp"
            android:text="Calories:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/results_aveHR"
            android:layout_alignBottom="@+id/results_aveHR"
            android:layout_alignParentLeft="true"
            android:text="Average HR:"
            android:textSize="20dp"
            android:textStyle="bold" />
        
        <com.androidplot.pie.PieChart
            android:id="@+id/belowPieChart"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="-10dp"
            android:layout_below="@+id/textView3"
            androidPlot.title="Below"
            androidPlot.titleWidget.labelPaint.textSize="20dp"/>
        
