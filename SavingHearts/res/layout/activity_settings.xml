<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_temp"
    android:orientation="vertical"
    tools:context=".SettingsActivity" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:orientation="horizontal" >
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="left"
        android:textSize="24sp"
        android:text="Your Birthday:"
         />
    
    <View
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txtvw_settings_bday"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:text="11/07/1990"
        android:textStyle="bold" />
    </LinearLayout>
    
    <LinearLayout  android:layout_width="fill_parent"
    android:layout_height="35dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="30dp" 
    android:orientation="horizontal">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        android:textSize="24sp"
        android:text="Your Weight:" />
    
     <View
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txtvw_settings_weight"
      	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:text="230 lbs"
        android:textStyle="bold" />
    
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:textSize="10dp"
        android:text="(tap to change)\n"
        android:textStyle="italic" />
    
    <Button
        android:id="@+id/btn_settings_savebutton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:background="#a93434"
        android:textColor="#fcfafa"
        android:textSize="20sp"
        style="?android:attr/buttonStyleSmall"
        android:text="Save Information" />
    
</LinearLayout>